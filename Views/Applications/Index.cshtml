@model IEnumerable<LicenseApp.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<h2>Applications</h2>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Application No</th>
            <th>License No</th>
            <th>Company Name</th>
            <th>Sakhan Name</th>
            <th>Create Date</th>
            <th>Last Date</th>
           @*  <th>Items List</th>
            <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@application.ApplicationNo</td>
                <td>@application.LicenseNo</td>
                <td>@application.CompanyName</td>
                <td>@(application.Sakhan?.SakhanName ?? "N/A")</td>
                <td>@application.CreateDate.ToString("dd-MM-yyyy")</td>
                <td>@application.LastDate.ToString("dd-MM-yyyy")</td>
                @* <td>
                    @if (application.LicenseItems != null && application.LicenseItems.Any())
                    {
                        <ul>
                            @foreach (var item in application.LicenseItems)
                            {
                                <li>@item.Item?.ItemName ?? "N/A" - @item.Quantity @item.Unit?.UnitName ?? "N/A"</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No items</p>
                    }
                </td> *@
                <td>
                    <!-- Add any actions for editing or deleting applications here -->
                </td>
            </tr>
        }
    </tbody>
</table>
