@model LicenseApp.ViewModels.GateCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="GateName" class="control-label"></label>
                <input asp-for="GateName" class="form-control" />
                <span asp-validation-for="GateName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GateCode" class="control-label"></label>
                <input asp-for="GateCode" class="form-control" />
                <span asp-validation-for="GateCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SakhanId" class="control-label mb-2 mt-2">Sakhan</label>
                @Html.DropDownListFor(m => m.SakhanId,
                         new SelectList(Model.Sakhans, "Id", "SakhanName", Model.SakhanId),
                         "Select Sakhan",
                         new { @class = "form-control" })
                <span asp-validation-for="SakhanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
